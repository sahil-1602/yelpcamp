<%- include("../partials/header") %>
<div class="container">
    <div class="">
        <h1 style="text-align: center;">Add a Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto; padding: 30px; border: 2px solid rgba(52, 52, 71,0.5);" >
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                  <input type="text" class="form-control" name="comment[text]" aria-describedby="emailHelp" placeholder="Text">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Comment</button>
                </div>
            </form>
            <a class="btn btn-success btn-sm" href="/campgrounds/<%=campground._id%>">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>