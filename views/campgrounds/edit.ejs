<%- include("../partials/header") %>
<div class="container">
    <div class="">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto; padding: 30px; border: 2px solid rgba(52, 52, 71,0.5);" >
            <form action="/campgrounds/<%= campground._id %>?_method=put" method="POST">
                <div class="form-group">
                  <input type="text" class="form-control" name="campground[name]"  value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" min="0.1" class="form-control" name="campground[price]" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-success btn-sm" href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>