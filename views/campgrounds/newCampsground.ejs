<%- include("../partials/header") %>
<div class="container">
    <div class="">
        <h1 style="text-align: center;">Add a new CampGround</h1>
        <div style="width: 30%; margin: 20px auto; padding: 30px; border: 2px solid rgba(52, 52, 71,0.5);" >
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                  <input type="text" class="form-control" name="name" aria-describedby="emailHelp" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <input type="number" step="1"  min="1" class="form-control" name="price"  placeholder="Price (per night)">
                  </div>
                <div class="form-group">
                  <input type="text" class="form-control" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Add Description">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-success btn-sm" href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>